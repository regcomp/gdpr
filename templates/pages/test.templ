package pages

templ TestPage() {
	<!DOCTYPE html>
	<html lang="en" x-data="{ darkMode: false }" :data-bs-theme="darkMode ? 'dark' : 'light'">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>Templ + Alpine.js Dark Mode</title>
			<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
			<style>
				.min-vh-100 {
					min-height: 100vh;
				}
				
				.dark-toggle {
					position: fixed;
					top: 1rem;
					right: 1rem;
					z-index: 1000;
				}
				
				[data-bs-theme="dark"] {
					background-color: #212529;
					color: #ffffff;
				}
				
				[data-bs-theme="dark"] .bg-light {
					background-color: #343a40 !important;
				}
				
				[data-bs-theme="dark"] .text-dark {
					color: #ffffff !important;
				}
				
				.fade-transition {
					transition: all 0.3s ease;
				}
				
				.btn-hover-scale:hover {
					transform: scale(1.05);
				}
			</style>
		</head>
		<body class="bg-light fade-transition min-vh-100">
			<!-- Dark mode toggle in top right -->
			<div class="dark-toggle">
				<button
					@click="darkMode = !darkMode"
					class="btn btn-outline-secondary btn-hover-scale fade-transition"
					:title="darkMode ? 'Switch to light mode' : 'Switch to dark mode'"
				>
					<span x-show="!darkMode">
						<svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
							<path d="M8 11a3 3 0 1 1 0-6 3 3 0 0 1 0 6zm0 1a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0zm0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13zm8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5zM3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8zm10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.414a.5.5 0 1 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0zm-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0zm9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707zM4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708z"></path>
						</svg>
					</span>
					<span x-show="darkMode">
						<svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
							<path d="M6 .278a.768.768 0 0 1 .08.858 7.208 7.208 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277.527 0 1.04-.055 1.533-.16a.787.787 0 0 1 .81.316.733.733 0 0 1-.031.893A8.349 8.349 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.752.752 0 0 1 6 .278z"></path>
						</svg>
					</span>
				</button>
			</div>
			<!-- Main content with centered button -->
			<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center">
				<div class="text-center">
					<h3 class="display-4 fw-bold text-dark mb-4 fade-transition">
						Templ + Alpine.js
					</h3>
					<button
						@click="alert('Button clicked!')"
						class="btn btn-primary btn-lg px-5 py-3 btn-hover-scale fade-transition shadow"
					>
						Click Me!
					</button>
					<p class="mt-4 text-muted fade-transition">
						Toggle dark mode with the button in the top right corner
					</p>
				</div>
			</div>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
		</body>
	</html>
}
